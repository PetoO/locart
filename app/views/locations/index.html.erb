                       <h4>Share your best place!</h4>
                       <button class="btn btn-red" type="button">
                            <i class="glyphicon glyphicon-log-in index-glyph-small"></i>
                        </button>
                    </div>      
                    </div>                       
                </div>
            </div>   
            <div class="hidden-xs hidden-sm">
                <ol class="carousel-indicators"  >
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"  style="background-image:url(<%= image_path('loc.jpg')%>);background-size:100px 100px;width:100px;height:100px;border-color:black;border-width:3px;"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1" style="background-image:url(<%= image_path('forest2.jpg')%>);background-size:100px 100px;width:100px;height:100px;border-color:black;border-width:3px"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2" style="background-image:url(<%= image_path('skiing2.jpg')%>);background-size:100px 100px;width:100px;height:100px;border-color:black;border-width:3px"></li>
                </ol>
            </div>             
        </div>          
    </div>
</div>

