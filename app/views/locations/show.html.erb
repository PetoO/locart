<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <h1 class="location_title_on">
            <%= @location.title %>
        </h1>
    </div>

    <div class="col-md-8 col-sm-12 col-xs-12">
        <div class="row ">          
            <div class="col-md-12 col-xs-12 col-xs-12"> 
            <div id="carousel-example-generic" class="carousel slide gallery" data-ride="carousel"  >
                <div class="carousel-inner" >
                    <div class="item active" >
                        <%= image_tag @location.image.url, class:"img-thumbnail" %>
                    </div> 
                      <% @photos.each do |photo| %>
                        <div class="item" >
                            <%= image_tag photo.photo.url, class:"img-thumbnail" %>
                        </div>  
                      <% end %>                      
                </div>   
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>          
            </div>  
            </div>
           
            <div class="col-md-6 col-xs-6 text-center">     
                    <%= link_to like_location_path(@location), :class => "btn btn-default form-control" ,style: "padding:0px" do %>
                        
                       
                        <span class="glyphicon glyphicon-thumbs-up" style="color:#000000;font-size: 30px;"></span>
                        
                    <% end %>
            </div>

            <div class="col-md-6 col-xs-6 text-center"> 
                
                    
                    <%= link_to dislike_location_path(@location), :class => "btn btn-default form-control",style: "padding:0px" do %>
                        
                        <span class="glyphicon glyphicon-thumbs-down" style="color:#000000;font-size: 30px;"></span>
                    <% end %>
                
            </div>
          
            <div class="col-md-12 col-xs-12">
                <h2>
                    Description
                </h2>
                <p>
                    <%= @location.description %>
                </p>

                <div id="comments">
                    <h3 class="comment_count">
                        <%= pluralize(@location.comments.count, "Comment") %>
                    </h3>
                    <% @comments.each do |comment| %>
                        <div class="comment">
                            <p class="username">
                                <%= link_to comment.user.name, comment.user %> comented on <%= comment.created_at.strftime('%d %B %Y') %>:
                            </p>
                            <p class="content">
                                "<%= comment.content %>"
                            </p>
                        </div>
                    <% end %>
                    <%= render "comments/form" %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-xs-12">
        <div class="row">
            <div class="col-md-12 col-xs-12 col-sm-12">
                <ul class="list-group">
                    <li class="list-group-item">
                        <span class="glyphicon glyphicon-user" style="font-size:25px;color:black;padding-right:15px;padding-left:13px"></span> 
                            
                            <%= link_to @location.user.name, @location.user %>
                    </li>
                    <li class="list-group-item">
                        <%= link_to like_location_path(@location), :class => "btn" do %>
                          <span class="glyphicon glyphicon-thumbs-up" style="font-size:25px;color:black;"></span>
                        <% end %>
                        <%= @location.get_upvotes.size %> Likes
                    </li>
                    <li class="list-group-item">
                        
                        <%= link_to dislike_location_path(@location), :class => "btn" do %>
                          <span class="glyphicon glyphicon-thumbs-down" style="font-size:25px;color:black;"></span>
                        <% end %>
                        <%= @location.get_downvotes.size %> Dislikes 
                    </li>
                    <li class="list-group-item">
                        <span class="glyphicon glyphicon-map-marker" style="font-size:25px;color:black;padding-right:15px;padding-left:13px"></span>
                        Lon <%= @location.lon %>, Lat <%= @location.lat %>
                    </li>
                    <li class="list-group-item" style="padding-left:13px">
                        <span class="glyphicon glyphicon glyphicon-tags" style="font-size:25px;color:black;padding-right:15px;padding-left:13px"></span>
                        <% @location.tag_list.each do |tag| %>
                        <span class="badge tag">
                        <%= link_to tag, "category/"+tag %>
                        </span>
                        <% end %>
                    </li>
                    <% if user_signed_in? %>
                        <li class="list-group-item">
                            <%= simple_form_for [@location, @location.photos.build] do |f| %>
                                <%= f.input :photo, label: "Add Photo to this location", required: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'form-group' } %>
                                <%= f.button :submit,"Add Photo", class: "btn" %>
                            <% end %>
                        </li>
                        <% if current_user.name==@location.user.name %>
                            <li class="list-group-item">
                                <%= link_to "Edit Location", edit_location_path(@location) , class: "btn btn-success edit_btn form-control", style:"margin-bottom: 10px;"%>
                                <%= link_to "Delete Location!", location_path(@location), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger edit_btn form-control" %>
                            </li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
            <div class="col-md-12 col-xs-12 col-sm-12">
                <div id="map_small">
                </div>
            </div>
        </div>
    </div>
</div>

<%= render "gmaps_show" %>




